{
  "name": "@arxpool-hq/sdk",
  "version": "0.1.0",
  "description": "Privacy-preserving pooling SDK targeting Arcium MXE.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check .",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "arcium",
    "sdk",
    "privacy",
    "pooling"
  ],
  "author": "ArxPool SDK Team",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@arcium-hq/client": "^0.3.0",
    "bs58": "^6.0.0",
    "tweetnacl": "^1.0.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.3"
  }
